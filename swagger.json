            "type": "string",
            "schema": {
              "type": "string"
            },
            "required": "true",
            "description": "The user's email verification token"
          }
        ],
        "responses": {
          "200": {
            "description": "Confirmation is successful. Returns information about the user and the authorization token.",
            "content": {
              " application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Verification successful"
                    },
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjY0YjY4OTFhM2UyZjJiOGYzNmI4YmMzNCIsImlhdCI6MTYyOTc3NTM3MSwiZXhwIjoxNjI5ODA2MTcxfQ.PoN3_kTCLl4PVw1oZ9UR7nECPhHWTZ-aSjlpH2nQTrI"
                    },
                    "verify": {
                      "type": "boolean",
                      "example": true
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "example": "Mary"
                        },
                        "avatarURL": {
                          "type": "string",
                          "example": "https://www.gravatar.com/avatar/400c266c3c1052e508a57fcbdaced87e?s=250"
                        },
                        "email": {
                          "type": "string",
                          "example": "navoven316@paldept.com"
                        },
                        "subscription": {
                          "type": "string",
                          "example": ""
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request (invalid request body)",
            "content": {}
          },
          "500": {
            "description": "Server error",
            "content": {}
          }
        }
      }
    },
