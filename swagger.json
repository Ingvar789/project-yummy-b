        "tags": ["Recipes"],
        "summary": "Return a list of recipes sorted by categories",
        "parameters": [
          {
            "in": "path",
            "name": "categoryName",
            "type": "string",
            "enum": [
              "Beef",
              "Breakfast",
              "Chicken",
              "Dessert",
              "Goat",
              "Lamb",
              "Miscellaneous",
              "Pasta",
              "Pork",
              "Seafood",
              "Side",
              "Starter",
              "Vegan",
              "Vegetarian"
            ],
            "required": true,
            "description": "Name of category"
          },
          {
            "in": "query",
            "name": "limit",
            "required": false,
            "type": "integer",
            "default": 8,
            "description": "The numbers of items to return"
          }
        ],
        "security": [{ "Bearer": [] }],
        "responses": {
          "200": {
            "description": "A list of recipes sorted by categories",
            "content": {
              "application/json": {
                "type": "array",
                "properties": {
                  "items": {
                    "type": "object",
                    "description": "Recipes in selected category",
